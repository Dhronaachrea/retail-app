<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_2sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_2sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_130sdp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/_187sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orgType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/address_color"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/orgId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/orgId_color"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="normal" />
                </LinearLayout>


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/orgName_color"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/address_color"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/amount_color"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/dlId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/amount_color"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="@dimen/_185sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text=". . . . . . . . . . . . . . . . . . . ."
                        android:textColor="@color/dot_color"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/deliver"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/icon_awesome_hand_holding_deliver"
                    android:gravity="bottom|center"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/delivery_ntickets"
                    android:textColor="#0d5185"
                    android:textSize="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/pickup"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/icon_awesome_hand_holding_pickup"
                    android:gravity="bottom|center"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/return_ntickets"
                    android:textColor="#6b4928"
                    android:textSize="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/collect"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:background="@drawable/icon_awesome_hand_holding_collect"
                    android:gravity="bottom|center"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/collect_ncash"
                    android:textColor="#0b7033"
                    android:textSize="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
