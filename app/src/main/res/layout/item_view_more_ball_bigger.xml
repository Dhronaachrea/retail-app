<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:gravity="center"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_clover"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:padding="3dp"
            android:tint="@color/colorDarkGrey"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_clover" />

        <com.skilrock.retailapp.utils.CircularTextView
            android:id="@+id/ball1text"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:padding="4dp"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/clover_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/view_saperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="#d8d8d8" />

        <ImageView
            android:id="@+id/image_saparator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:elevation="1dp"
            android:src="@drawable/layer_9"
            android:tint="#d8d8d8" />
    </RelativeLayout>
</LinearLayout>
