<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginTop="5dp"
    android:gravity="center"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_clover"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="3dp"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:tint="@color/colorDarkGrey"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_clover" />

        <com.skilrock.retailapp.utils.CircularTextView
            android:id="@+id/ball1text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="4dp"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/clover_number"
            android:layout_width="wrap_content"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:elevation="2dp"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <ImageView
        android:id="@+id/image_saparator"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:src="@drawable/layer_9"
        android:layout_marginEnd="1dp"
        android:tint="#707070" />

</LinearLayout>
