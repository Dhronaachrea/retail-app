<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#012161">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/arrowleft"
            android:foregroundGravity="left"></ImageView>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="26dp"
            android:layout_marginLeft="30dp"
            android:foregroundGravity="left"></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-black"
            android:lineSpacingExtra="-1.5sp"
            android:textColor="#ffc400"
            android:textSize="12.5sp"
            android:textStyle="normal"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="170dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:foregroundGravity="right"
                android:lineSpacingExtra="2.5sp"
                android:textColor="#ffffff"
                android:textSize="12sp"

                android:textStyle="normal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:lineSpacingExtra="5.5sp"

                />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:id="@+id/price_bar"
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#ffb700"
            android:layout_height="55dp">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="15sp"
                    android:text="Pool Price:"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/pool_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="20sp"
                    android:text="$15000"/>
            </RelativeLayout>





        </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/game_play"
        android:layout_below="@+id/price_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="12dp"
        android:layout_margin="15dp"
        android:layout_above="@+id/bottom_view">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layerType="software"
            android:id="@+id/sports_recycle_view">

        </androidx.recyclerview.widget.RecyclerView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:weightSum="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="6"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/bet_amount_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:visibility="invisible"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="$100"
                        android:textColor="@color/new_five_selection"
                        android:background="@drawable/buy_rectangle_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/bet_amount_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:visibility="invisible"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="$200"
                        android:textColor="@color/new_five_selection"
                        android:background="@drawable/buy_rectangle_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/bet_amount_three"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:visibility="invisible"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="$300"
                        android:textColor="@color/new_five_selection"
                        android:background="@drawable/buy_rectangle_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/bet_amount_four"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:visibility="invisible"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="$400"
                        android:textColor="@color/new_five_selection"
                        android:background="@drawable/buy_rectangle_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/bet_amount_five"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:visibility="invisible"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="$500"
                        android:textColor="@color/new_five_selection"
                        android:background="@drawable/buy_rectangle_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/bet_amount_other"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:visibility="invisible"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="Other"
                        android:textColor="@color/new_five_selection"
                        android:background="@drawable/buy_rectangle_color"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/reset_data"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/buy_rectangle"
                    android:weightSum="3"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/reset"
                        android:layout_weight="1.8"
                        android:layout_gravity="center|center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:layout_gravity="center_horizontal|center"
                        android:text="Reset\n  Bet"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/buy_rectangle"
                    android:weightSum="2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/no_of_lines"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/_10sdp"
                        android:text="0"
                        android:textColor="@color/new_five_selection"
                        android:gravity="center"
                        android:layout_weight="1.5"/>
                    <TextView
                        android:id="@+id/text_no_of_lines"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:text="No Of Lines"
                        android:gravity="center_horizontal"
                        android:layout_weight="0.5"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:layout_weight="1"
                    android:background="@drawable/buy_rectangle"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/value"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/_10sdp"
                        android:text="$100"
                        android:textColor="@color/new_five_selection"
                        android:gravity="center"
                        android:layout_weight="1.5"/>
                    <TextView
                        android:id="@+id/set_value"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:text="Set Value"
                        android:gravity="center_horizontal"
                        android:layout_weight="0.5"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/buy_ticket"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/group_buy"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>