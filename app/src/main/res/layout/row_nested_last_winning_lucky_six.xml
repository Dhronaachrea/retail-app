<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginTop="5dp"
    android:gravity="center"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_clover"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:padding="3dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_clover" />

        <com.skilrock.retailapp.utils.CircularTextView
            android:id="@+id/ball1text"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:padding="4dp"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/clover_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/image_saparator"
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:src="@drawable/layer_9"
        android:tint="#d8d8d8" />

</LinearLayout>